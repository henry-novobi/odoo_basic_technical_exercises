<odoo>
    <data noupdate="0">
        <record id="group_category_librarian" model="ir.module.category">
            <field name="name">Library</field>
            <field name="sequence">7</field>
        </record>
    
        <record id = "group_librarian_assistant" model = "res.groups">
            <field name="name">Library Assistants</field>
            <field name="category_id" ref = "group_category_librarian" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
    
    <data noupdate="0">
        <record id="novobi_library_book.access_library_book_reader" model="ir.rule">
            <field name="name">Book Asset internal user</field>
            <field name="global" eval = 'False'/>
            <field name="model_id" ref="model_library_book"/>
            <field name="perm_read" eval = "True" />
            <field name="perm_write" eval = "False" />
            <field name="perm_create" eval = "False" />
            <field name="perm_unlink" eval = "False" />
            <field name="domain_force">[('status','!=', 'lost')]</field>
        </record>
    </data>
    
    
</odoo>
