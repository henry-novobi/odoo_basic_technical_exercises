<odoo>
    <data noupdate="0">
        <record id="group_category_librarian" model="ir.module.category">
            <field name="name">Library</field>
            <field name="sequence">7</field>
        </record>
    
        <record id = "group_librarian_assistant" model = "res.groups">
            <field name="name">Library Assistants</field>
            <field name="category_id" ref = "group_category_librarian" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
    
    <data noupdate="0">
        <record id="access_library_book_lost_rule" model="ir.rule">
            <field name="name">Internal user just read the book not lost</field>
            <field name="model_id" ref="model_library_book"/>
            <field name="perm_read" eval = "True" />
            <field name="perm_write" eval = "False" />
            <field name="perm_create" eval = "False" />
            <field name="perm_unlink" eval = "False" />
            <field name="groups" eval = "[(4, ref('base.group_user'))]" />
            <field name="domain_force">[('status','!=', 'lost')]</field>
        </record>

        <record id="access_library_book_librarian_rule" model="ir.rule">
            <field name="name">Librarian and Assistant have access for all book status</field>
            <field name="model_id" ref="model_library_book"/>
            <field name="groups" eval="[(4, ref('novobi_library_book.group_librarian')), (4, ref('group_librarian_assistant'))]" />
            <field name="domain_force">[(1,'=', 1)]</field>
        </record>
    </data>
</odoo>
