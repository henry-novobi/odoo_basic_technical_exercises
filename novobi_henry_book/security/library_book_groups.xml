<odoo>
    <record id="group_librarian" model="res.groups">
        <field name="name">Librarians</field>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <record id = "group_librarian_assistant" model = "res.groups">
        <field name="name">Library Assistants</field>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <record id="book_readonly_user" model="ir.rule">
        <field name="name">Book Asset internal user</field>
        <field name="global" eval = 'True'/>
        <field name="model_id" ref="model_library_book"/>
        <field name="domain_force">[('status','!=', 'lost')]</field>
    </record>
</odoo>