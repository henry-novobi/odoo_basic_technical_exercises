<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_booklocation">
        <t t-call="web.external_layout">
            <div class="page">
                <div align = "right" style = "padding-right: 30px">
                    <p><t t-esc="doc.env.user.company_id.name"/></p>
                    <p><t t-esc="doc.env.user.company_id.street"/></p>
                    <span t-field = "doc.env.user.company_id.state_id"/>
                    <span>,    </span>
                    <span t-field ="doc.env.user.company_id.city"/>
                    <p><t t-esc="doc.env.user.company_id.country_id.name"/></p>
                </div>

                <h2 class="mt16">
                    <span t-field="doc.name"/>
                </h2>

                <div class="row mt32 mb32" id="information">
                    <div name="info_printed_date" class="col-auto col-3 mw-100 mb-2">
                        <strong>Printed Date:</strong>
                        <p class="m-0" t-esc="context_timestamp(datetime.datetime.now()).strftime('%m-%d-%Y')"/>
                    </div>
                    <div name="info_user" class="col-auto col-3 mw-100 mb-2">
                        <strong>By:</strong>
                        <p class="m-0" t-esc="user.name"/>
                    </div>
                </div>

                <div style= "padding: 20px 0">
                    <p></p>
                </div>

                <table width = "90%" align = "center" style="border:solid 1px; border-collapse: collapse;">
                    <tbody>
                        <tr>
                          <td style="border:solid 1px;padding-left: 15px; font-weight: bold;">Book</td>
                          <td style="border:solid 1px;padding-left: 15px; font-weight: bold;">Status</td>
                          <td style="border:solid 1px;padding-left: 15px; font-weight: bold;">Current Borrower</td>
                          <td style="border:solid 1px;padding-right: 15px; font-weight: bold;text-align: right;"> Return Date</td>
                        </tr>
                        <tr t-foreach="doc.book_ids" t-as="b">
                          <td style="border:solid 1px;padding-left: 15px"><span t-field="b.name"/></td>
                          <td style="border:solid 1px;padding-left: 15px"><span t-field="b.status"/></td>
                          <td style="border:solid 1px;padding-left: 15px"><span t-field="b.current_borrower_id.name"/></td>
                          <td style="border:solid 1px;padding-right: 15px;text-align: right;"><span t-field="b.date_return"/></td>
                        </tr>
                    </tbody>
                </table>
                
                <div style= "padding: 20px 0">
                    <p></p>
                </div>

                <table width = "50%" align = "right" style="border:solid 1px; border-collapse: collapse; padding-right: 15px">
                    <tbody>
                        <tr>
                          <td style="border:solid 1px;padding-left: 15px; font-weight: bold;">Total</td>
                          <td style="border:solid 1px;padding-right: 15px; text-align: right;"><span t-field="doc.total_books"/></td>
                        </tr>
                    </tbody>
                </table>

                <div name="info_end" style = "padding: 30px 0">
                    <p>The above information is valid within:</p>
                    <strong class="m-0" style = "font-weight: bold;" t-esc="context_timestamp(datetime.datetime.now()).strftime('%m-%d-%Y')"/>
                </div>
            </div>
        </t>
    </template>


    <template id="report_print_booklocation">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="novobi_henry_book.report_booklocation" />
            </t>
        </t>
    </template>
</odoo>
